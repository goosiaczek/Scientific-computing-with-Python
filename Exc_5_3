
# a 1D random walker

import random

# start - pozycja startowa, repeat_ - ilość powtórzeń

def random_walk(start, repeat_):
    k = 0
    while k < repeat_:
        i = random.choice([-1, 1])
        yield start + i
        start += i
        k += 1


for start in random_walk(0, 100):
    print(start)
